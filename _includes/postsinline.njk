{% for post in postslist %}

  <div class="post-item{% if post.url == url %} postlist-item-active{% endif %}">
    <div class="post-item-header">
      <h2 class="post-item-title">
        <a href="{{ post.url | url }}">
          {% if post.data.title %}{{ post.data.title }}
          {% else %}
            <code>{{ post.url }}</code>
          {% endif %}

        </a>.
      </h2>
      <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    </div>
    {% for tag in post.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    {%- if post.data.mixcloud -%}
      <iframe width="100%" height="168" src="https://www.mixcloud.com/widget/iframe/?hide_cover=1&light=1&feed=%2Fradioslipstream%2F{{ post.data.mixcloud }}%2F" frameborder="0"></iframe>
    {%- endif -%}
    {{ post.templateContent | safe }}
  </div>
{% endfor %}