{% for post in postslist %}

  <div 
    class="post-item{% if post.url == url %} postlist-item-active{% endif %}"
    x-bind:class="expanded ? 'expanded' : 'clipped'"
    x-data="{ expanded: false }"
    x-ref="container" 
    x-bind:style="expanded ? 'max-height: ' + $refs.container.scrollHeight + 'px' : ''"
  >
    <div class="post-item-header">
      <h2 class="post-item-title">
        <a href="{{ post.url | url }}">
          {% if post.data.title %}{{ post.data.title }}
          {% else %}
            <code>{{ post.url }}</code>
          {% endif %}

        </a>.
      </h2>
      <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    </div>
    <div class="post-item-body">
    {% for tag in post.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    {%- if post.data.mixcloud -%}
      <iframe width="100%" height="168" src="https://www.mixcloud.com/widget/iframe/?hide_cover=1&light=1&feed=%2Fradioslipstream%2F{{ post.data.mixcloud }}%2F" frameborder="0"></iframe>
    {%- elseif post.data.filename -%}
      <audio controls src="{{ post.data.filename }}"></audio>
    {%- endif -%}
    {{ post.templateContent | safe }}
    </div>
    <div class="post-item-footer">
      <button x-show="!expanded" class="cta-sm" @click="expanded = !expanded" >
        <span>Expand</span>
        <span class="arw">â†“</span>
      </button>
      {# <a class="cta-sm" href="{{ post.url | url }}">Visit</a> #}
    </div>
  </div>

{% endfor %}